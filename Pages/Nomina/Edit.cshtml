@page
@model HRManager.Pages.Nomina.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Nomina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Nomina.IdNomina" />

            <div class="form-group">
                <label asp-for="Nomina.IdEmpleado_fk" class="control-label"></label>
                <input asp-for="Nomina.IdEmpleado_fk" class="form-control"></input>
                <span asp-validation-for="Nomina.IdEmpleado_fk" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nomina.PeriodoInicio" class="control-label"></label>
                <input asp-for="Nomina.PeriodoInicio" class="form-control"></input>
                <span asp-validation-for="Nomina.PeriodoInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nomina.PeriodoFin" class="control-label"></label>
                <input asp-for="Nomina.PeriodoFin" class="form-control"></input>
                <span asp-validation-for="Nomina.PeriodoFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nomina.TotalPagado" class="control-label"></label>
                <input asp-for="Nomina.TotalPagado" class="form-control"></input>
                <span asp-validation-for="Nomina.TotalPagado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary"> Back to List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
