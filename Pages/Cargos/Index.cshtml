@page
@model HRManager.Pages.Cargos.IndexModel

@{
    ViewData["Title"] = "Index Cargos";
}

<h1>Index Cargos</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cargos[0].TituloCargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargos[0].Descripcion)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cargos)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TituloCargo)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdCargo" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.IdCargo" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
